{
  "name": "@acme/nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "pnpm with-env next dev --turbopack -p 3001",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:list": "playwright test --reporter=list",
    "test:e2e:ci": "playwright test --reporter=line",
    "generate-pricing-pdf": "node scripts/generate-pricing-pdf.js"
  },
  "dependencies": {
    "@acme/ai": "workspace:*",
    "@acme/api": "workspace:*",
    "@acme/auth": "workspace:*",
    "@acme/db": "workspace:*",
    "@acme/ui-desktop": "workspace:*",
    "@acme/ui-mobile": "workspace:*",
    "@acme/ui-shared": "workspace:*",
    "@acme/validators": "workspace:*",
    "@supabase/supabase-js": "^2.53.0",
    "@t3-oss/env-nextjs": "^0.13.6",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "@trpc/tanstack-react-query": "catalog:",
    "next": "^15.3.3",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "superjson": "2.2.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tailwind-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@playwright/test": "^1.54.1",
    "@types/node": "^22.15.29",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "jiti": "^2.4.2",
    "prettier": "catalog:",
    "puppeteer": "24.22.0",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config"
}
