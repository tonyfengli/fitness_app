{
  "name": "@acme/tv",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "generate-env": "node ./scripts/generate-env.js",
    "prestart": "pnpm run generate-env",
    "android": "react-native run-android",
    "android:tv": "JAVA_HOME='/usr/local/opt/openjdk@17' ANDROID_HOME='$HOME/Library/Android/sdk' PATH='/usr/local/opt/openjdk@17/bin:$PATH:$HOME/Library/Android/sdk/platform-tools' pnpx react-native run-android --mode=tvDebug",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "dev": "APP_ENV=development pnpm run generate-env && react-native start",
    "dev:prod": "APP_ENV=production pnpm run generate-env && react-native start",
    "clean": "rm -rf node_modules .turbo build android/app/build ios/build",
    "clean:android": "cd android && ./gradlew clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "guard:deps": "node ./scripts/guardDeps.js",
    "prebuild": "pnpm run guard:deps && pnpm run generate-env",
    "build": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "build:debug": "./scripts/build-tv.sh",
    "build:release": "./scripts/build-tv.sh --release",
    "build:clean": "./scripts/build-tv.sh --clean",
    "deploy:tv": "adb install -r android/app/build/outputs/apk/debug/app-debug.apk"
  },
  "dependencies": {
    "@acme/api": "workspace:*",
    "@acme/auth": "workspace:*",
    "@acme/ui-shared": "workspace:*",
    "@react-native-async-storage/async-storage": "^2.1.0",
    "@react-navigation/native": "^7.0.14",
    "@react-navigation/stack": "^7.0.14",
    "@supabase/supabase-js": "^2.53.0",
    "@tanstack/react-query": "catalog:default",
    "@trpc/client": "catalog:default",
    "@trpc/tanstack-react-query": "catalog:default",
    "nativewind": "2.0.11",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "react-native": "npm:react-native-tvos@0.79.2-0",
    "react-native-config": "1.5.6",
    "react-native-gesture-handler": "~2.25.0",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-reanimated": "~3.18.0",
    "react-native-safe-area-context": "~5.4.1",
    "react-native-screens": "~4.11.1",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-vector-icons": "10.3.0",
    "react-native-web": "^0.20.0",
    "superjson": "2.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/runtime": "^7.27.4",
    "@react-native-community/cli": "^19.1.1",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "0.79.2",
    "@react-native/metro-config": "0.79.2",
    "@react-native/typescript-config": "0.79.2",
    "@types/node": "^22.15.29",
    "@types/react": "catalog:react19",
    "@types/react-native": "^0.73.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "dotenv": "^16.4.7",
    "dotenv-expand": "12.0.2",
    "eslint": "catalog:default",
    "metro-react-native-babel-preset": "^0.77.0",
    "tailwindcss": "3.2.7",
    "ts-node": "10.9.2",
    "typescript": "catalog:default"
  },
  "overrides": {
    "tailwindcss": "3.2.7",
    "postcss": "8.4.21"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}